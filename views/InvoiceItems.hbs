<!-- INVOICE ITEMS PAGE -->
  <div class="table-responsive">
    <div class="table-wrapper">			
      <div style="margin-top:100px; margin-bottom: 100px;">
        <div class="container">
          <div class="row table-responsive align-middle">

                <!-- INVOICES ITEMS-->
                <h1>Invoice Items</h1>
                <hr>
                <p>Use this page to add, update, update or remove the details individual Invoice Items on Invoices of a customer's purchase:</p>

                <!-- ADD BUTTON -->
                <table>
                    <tr>
                      <td colspan="6" align="left">
                      <a href="#addInvoiceItemModal" class="update" data-bs-toggle="modal">
                      <button type="button" class="btn btn-primary" data-bs-toggle="tooltip" data-bs-target="addInvoiceItemModal" title="Add">Add A New Invoice Item + </button></a>
                      </td>
                    </tr>
                  </tbody>
                </table>

                <!-- SEARCH BAR -->
                <table class="table table-hover" >
                  <thead class="table-light">
                    <tr>
                      <th>Search for Invoice Items:</th>
                    </tr>
                  </thead>
                  <tbody>
                    <tr>
                      <td colspan="5">
                        <div class="input-group">
                        <input class="form-control mr-sm-2" type="search" placeholder="Invoice Item ID">
                        <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
                        </div>
                      </td>
                    </tr>
                  </tbody>
                </table>

                <!-- DATA TABLE -->
                <table class="table table-hover" id="cashiers-table">
                    <thead class="table-light">
                      <tr>
                        {{#each data.[0]}}
                        <th>{{@key}}</th>
                        {{/each}}
                        <th> Modify </th>
                      </tr>
                    </thead>
                    <tbody>
                      {{#each data}}
                      <tr>
                        <td>{{this.invoiceItem_id}}</td>
                        <td>{{this.invoice_id}}</td>
                        <td>{{this.plant_id}}</td>
                        <td>{{this.plant_quantity}}</td>
                        <!-- UPDATE / DELETE -->
                        <td>
                          <a href="#updateInvoiceItemModal" class="update" data-bs-toggle="modal">
                          <i class="material-icons" data-bs-toggle="tooltip" data-bs-target="updateInvoiceItemModal" title="update">&#xE254;</i></a>
                          <a href="#deleteInvoiceItemModal" class="delete" data-bs-toggle="modal">
                          <i class="material-icons" data-bs-toggle="tooltip" data-bs-target="deleteInvoiceItemModal"title="Delete">&#xE872;</i></a>
                          </td>
                      </tr>
                      {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    
  <!-- ADD MODAL -->
	<div id="addInvoiceItemModal" class="modal">
		<div class="modal-dialog">
			<div class="modal-content">
				<form>
					<div class="modal-header">						
						<h4 class="modal-title">Add Invoice Item</h4>
						<button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal" aria-hidden="true">&times;</button>
					</div>
					<div class="modal-body">
            		<p style="color:red;">Required Fields *</p>						
						<div class="form-group">
							<label>Invoice ID: *</label>
							<input type="text" class="form-control" required>
						</div>
						<div class="form-group">
							<label>Plant ID: *</label>
							<input type="text" class="form-control" required>
						</div>
						<div class="form-group">
							<label>Plant Quantity: *</label>
							<input type="text" class="form-control" required>
						</div>
          			</div>					
					<div class="modal-footer">
						<input type="button" class="btn btn-default" data-bs-dismiss="modal" value="Cancel">
						<input type="submit" class="btn btn-success" value="Add">
					</div>
				</form>
			</div>
		</div>
	</div>

	<!-- UPDATE MODAL -->
	<div id="updateInvoiceItemModal" class="modal">
		<div class="modal-dialog">
			<div class="modal-content">
				<form>
					<div class="modal-header">						
						<h4 class="modal-title">Update Invoice Item</h4>
						<button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal" aria-hidden="true">&times;</button>
					</div>
					  <div class="modal-body">
            			<p style="color:red;">Required Fields *</p>						
						<div class="form-group">
							<label>Invoice Item ID: *</label>
							<input type="text" class="form-control" required>
						</div>
						<div class="form-group">
							<label>Invoice ID: *</label>
							<input type="text" class="form-control" required>
						</div>
						<div class="form-group">
							<label>Plant ID: *</label>
							<input type="text" class="form-control" required>
						</div>
						<div class="form-group">
							<label>Plant Quantity: *</label>
							<input type="text" class="form-control" required>
						</div>
            		</div>
					  <div class="modal-footer">
						<input type="button" class="btn btn-outline-warning" data-bs-dismiss="modal" value="Cancel">
						<input type="submit" class="btn btn-outline-success" value="Save">
					  </div>
				</form>
			</div>
		</div>
	</div>

	<!-- DELETE MODAL -->
	<div id="deleteInvoiceItemModal" class="modal">
		<div class="modal-dialog">
			<div class="modal-content">
				<form>
					<div class="modal-header">						
						<h4 class="modal-title">Delete Invoice Item</h4>
						<button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal" aria-hidden="true">&times;</button>
					</div>
					<div class="modal-body">					
						<p>Are you sure you want to delete this Invoice Item?</p>
						<p>This action cannot be undone.</p>
					</div>
					<div class="modal-footer">
						<input type="button" class="btn btn btn-outline-warning" data-bs-dismiss="modal" value="Cancel">
						<input type="submit" class="btn btn-outline-danger" value="Delete">
					</div>
				</form>
			</div>
		</div>
	</div>
</div>
</div>