<!-- DELETE JS SCRIPT -->
<script src="./js/invoice/delete_invoice.js"></script>

    <div class="table-responsive">
      <div class="table-wrapper">			
        <div style="margin-top:100px; margin-bottom: 100px;">
          <div class="container">
            <div class="row table-responsive align-middle">

                <!-- INVOICES -->
                <h1>Invoices</h1>
                <hr>
                <p>Use this page to add, edit, update or remove the details of a customer's purchase:</p>

                <!-- ADD BUTTON -->
                <table>
                    <tr>
                      <td colspan="6" align="left">
                      <a href="#addInvoiceModal" class="edit" data-bs-toggle="modal">
                      <button type="button" class="btn btn-primary" data-bs-toggle="tooltip" data-bs-target="addInvoiceModal" title="Add">Add A New Invoice + </button></a>
                      </td>
                    </tr>
                  </tbody>
                </table>

                <!-- SEARCH BAR -->
                <table class="table table-hover" >
                  <thead class="table-light">
                    <tr>
                      <th>Search for Invoices:</th>
                    </tr>
                  </thead>
                  <tbody>
                    <tr>
                      <td colspan="6">
                        <div class="input-group">
                        <input class="form-control mr-sm-2" type="search" placeholder="Invoice ID">
                        <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
                        </div>
                      </td>
                    </tr>
                  </tbody>
                </table>

                <!-- DATA TABLE -->
                <table class="table table-hover" id="invoices-table">
                    <thead class="table-light">
                      <tr>
                        {{#each data.[0]}}
                        <th>{{@key}}</th>
                        {{/each}}
                        <th> Edit / Delete </th>
                      </tr>
                    </thead>
                    <tbody>
                      {{#each data}}
                      <tr>
                        <td>{{this.invoice_id}}</td>
                        <td>{{this.customer_id}}</td>
                        <td>{{this.cashier_id}}</td>
                        <td>{{this.total_price}}</td>
                        <td>{{this.invoice_date}}</td>
                        <!-- EDIT / DELETE -->
                        <td>
                          <a href="#editInvoiceModal" class="edit" data-bs-toggle="modal">
                          <i class="material-icons" data-bs-toggle="tooltip" data-bs-target="editInvoiceModal" title="Edit">&#xE254;</i></a>
                          <a href="#deleteInvoiceModal" class="delete" data-bs-toggle="modal">
                          <i class="material-icons" data-bs-toggle="tooltip" data-bs-target="deleteInvoiceModal"title="Delete">&#xE872;</i></a>
                          </td>
                      </tr>
                      {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

  <!-- ADD MODAL -->
	<div id="addInvoiceModal" class="modal">
		<div class="modal-dialog">
			<div class="modal-content">
				<form id="add-invoice-form-ajax">
					<div class="modal-header">						
						<h4 class="modal-title">Add Invoice</h4>
						<button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal" aria-hidden="true">&times;</button>
					</div>
					<div class="modal-body">
            		<p style="color:red;">Required Fields *</p>
						<div class="form-group">
							<label for="customer_id">Customer ID: *</label>
							<input type="text" class="form-control" name="input-customer_id" id="input-customer_id" >
						</div>						
						<div class="form-group">
							<label for="cashier_id">Cashier ID: (Optional)</label>
							<input type="text" class="form-control" name="input-cashier_id" id="input-cashier_id" >
						</div>
						<div class="form-group">
							<label for="total_price">Total Price: *</label>
							<input type="text" class="form-control" name="input-total_price" id="input-total_price" required>
						</div>					
          				<div class="form-group">
							<label for="invoice_date">Invoice Date: *</label>
							<input type="date" class="form-control" name="input-invoice_date" id="input-invoice_date" required>
						</div>				
					</div>
					<div class="modal-footer">
						<input type="button" class="btn btn-default" data-bs-dismiss="modal" value="Cancel">
						<input type="submit" class="btn btn-success" data-bs-dismiss="modal" href="Invoices" value="Add">
					</div>
				</form>
			</div>
		</div>
	</div>

	<!-- ADD JS SCRIPT -->
	<script src="./js/invoice/add_invoice.js"></script>

	<!-- EDIT MODAL -->
	<div id="editInvoiceModal" class="modal">
		<div class="modal-dialog">
			<div class="modal-content">
				<form>
					<div class="modal-header">						
						<h4 class="modal-title">Edit Invoice</h4>
						<button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal" aria-hidden="true">&times;</button>
					</div>
					<div class="modal-body">
            			<p style="color:red;">Required Fields *</p>						
						<div class="form-group">
							<label>Invoice ID: *</label>
							<input type="text" class="form-control" required>
						</div>
						<div class="form-group">
							<label>Customer ID: *</label>
							<input type="text" class="form-control" required>
						</div>
						<div class="form-group">
							<label>Cashier ID: (Optional)</label>
							<input type="text" class="form-control">
						</div>
						<div class="form-group">
							<label>Total Price: *</label>
							<input type="text" class="form-control" required>
						</div>					
            				<div class="form-group">
							<label>Invoice Date: *</label>
							<input type="date" class="form-control" required>
							</div>
					</div>					
					<div class="modal-footer">
						<input type="button" class="btn btn-outline-warning" data-bs-dismiss="modal" value="Cancel">
						<input type="submit" class="btn btn-outline-success" value="Save">
					</div>
				</div>
				</form>
			</div>
		</div>
	</div>

	<!-- DELETE MODAL -->
	<div id="deleteInvoiceModal" class="modal">
		<div class="modal-dialog">
			<div class="modal-content">
				<form>
					<div class="modal-header">						
						<h4 class="modal-title">Delete Invoice</h4>
						<button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal" aria-hidden="true">&times;</button>
					</div>
					<div class="modal-body">					
						<p>Are you sure you want to delete this Invoice?</p>
						<p>This action cannot be undone.</p>
					</div>
					<div class="modal-footer">
						<input type="button" class="btn btn btn-outline-warning" data-bs-dismiss="modal" value="Cancel">
						<input type="submit" class="btn btn-outline-danger" value="Delete">
					</div>
				</form>
			</div>
		</div>
	</div>
