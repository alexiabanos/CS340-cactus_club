<!-- CASHIERS PAGE -->

<!-- DELETE JS SCRIPT -->
<script src="./js/cashier/delete_cashier.js"></script>

<div style="margin-top:100px; margin-bottom: 100px;">
	<div class="container">
		<div class="row table-responsive align-middle">
			
			<!-- CASHIERS -->
			<h1>Cashiers</h1>
			<hr>
			<p>Use this page to add, edit, update or remove the details of cashiers employed by the store:</p>

			<!-- ADD BUTTON -->
			<table>
				<tr>
					<td colspan="6" align="left">
					<a href="#addCashierModal" class="edit" data-bs-toggle="modal">
					<button type="button" class="btn btn-primary" data-bs-toggle="tooltip" data-bs-target="addCashierModal" title="Add">Add A New Cashier + </button></a>
					<br>
					</td>
				</tr>
				</tbody>
			</table>

			<!-- SEARCH BAR -->
			<table class="table table-hover" >
				<thead class="table-light">
				<tr>
					<th>Search for Cashiers:</th>
				</tr>
				</thead>
				<tbody>
				<tr>
					<td colspan="6">
					<div class="input-group">
					<input class="form-control mr-sm-2" type="search" placeholder="Cashier ID">
					<button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
					</div>
					</td>
				</tr>
				</tbody>
			</table>

			<!-- DATA TABLE -->
			<table class="table table-hover" id="cashiers-table">
				<thead class="table-light">
					<tr>
					{{#each data.[0]}}
					<th>{{@key}}</th>
					{{/each}}
					<th> Edit / Delete </th>
					</tr>
				</thead>
				<tbody>
					{{#each data}}
					<tr data-value={{this.id}}>
					<td>{{this.cashier_id}}</td>
					<td>{{this.cashier_first}}</td>
					<td>{{this.cashier_last}}</td>
					<td>{{this.hourly_rate}}</td>
					<!-- EDIT / DELETE -->
					<td>
						<a href="#editCashierModal" class="edit" data-bs-toggle="modal">
						<i class="material-icons" data-bs-toggle="tooltip" data-bs-target="editCashierModal" title="Edit">&#xE254;</i></a>
						<a href="#deleteCashierModal" class="delete" data-bs-toggle="modal">
						<i class="material-icons" data-bs-toggle="tooltip" data-bs-target="deleteCashierModal"title="Delete">&#xE872;</i></a>
						</td>
					</tr>
					{{/each}}
				</tbody>
			</table>
		</div>
	</div>
</div>

<!-- ADD MODAL -->
<div id="addCashierModal" class="modal">
	<div class="modal-dialog">
		<div class="modal-content">
			<form id="add-cashier-form-ajax">
				<div class="modal-header">						
					<h4 class="modal-title">Add Cashier</h4>
					<button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal" aria-hidden="true">&times;</button>
				</div>
				<div class="modal-body">
					<p style="color:red;">Required Fields (*)</p>					
					<div class="form-group">
						<label for="input-cashier_first">First Name:</label>
						<input type="text" class="form-control" name="input-cashier_first" id="input-cashier_first" required>
					</div>
					<div class="form-group">
						<label for="input-cashier_last">Last Name:</label>
						<input type="text" class="form-control" name="input-cashier_last" id="input-cashier_last" required>
					</div>
					<div class="form-group">
						<label for="input-hourly_rate">Hourly Rate:</label>
						<input type="text" class="form-control" name="input-hourly_rate" id="input-hourly_rate" required>
					</div>
				</div>
				<div class="modal-footer">
					<input type="button" class="btn btn-default" data-bs-dismiss="modal" value="Cancel">
					<input type="submit" class="btn btn-success" data-bs-dismiss="modal" href="Cashiers" value="Add">
				</div>
			</form>
		</div>
	</div>
</div>

<!-- ADD JS SCRIPT -->
<script src="./js/cashier/add_cashier.js"></script>

<!-- EDIT MODAL -->
<div id="editCashierModal" class="modal">
	<div class="modal-dialog">
		<div class="modal-content">
			<form>
				<div class="modal-header">						
					<h4 class="modal-title">Edit Cashier</h4>
					<button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal" aria-hidden="true">&times;</button>
				</div>
				<div class="modal-body">
					<p style="color:red;">Required Fields *</p>						
					<div class="form-group">
						<label>Cashier ID: *</label>
						<input type="text" class="form-control" required>
					</div>
					<div class="form-group">
						<label>Cashier First Name: *</label>
						<input type="text" class="form-control" required>
					</div>
					<div class="form-group">
						<label>Cashier Last Name: *</label>
						<input type="text" class="form-control" required>
					</div>
					<div class="form-group">
						<label>Cashier Hourly Rate: *</label>
						<input type="text" class="form-control" required>
					</div>
				</div>					
				<div class="modal-footer">
					<input type="button" class="btn btn-outline-warning" data-bs-dismiss="modal" value="Cancel">
					<input type="submit" class="btn btn-outline-success" value="Save">
				</div>
			</div>
			</form>
		</div>
	</div>
</div>

	<!-- DELETE MODAL -->
<div id="deleteCashierModal" class="modal">
	<div class="modal-dialog">
		<div class="modal-content">
			<form>
				<div class="modal-header">						
					<h4 class="modal-title">Delete Cashier</h4>
					<button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal" aria-hidden="true">&times;</button>
				</div>
				<div class="modal-body">					
					<p>Are you sure you want to delete this Cashier?</p>
					<p>This action cannot be undone.</p>
				</div>
				<div class="modal-footer">
					<input type="button" class="btn btn btn-outline-warning" data-bs-dismiss="modal" value="Cancel">
					<input type="submit" class="btn btn-outline-danger" value="Delete" onclick="deleteItem({{this.cashier_id}})">
				</div>
			</form>
		</div>
	</div>
</div>