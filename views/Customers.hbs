<!-- CUSTOMERS PAGE -->

<!-- DELETE JS SCRIPT -->
<script src="./js/customer/delete_customer.js"></script>

  <div class="table-responsive">
    <div class="table-wrapper">			
      <div style="margin-top:100px; margin-bottom: 100px;">
        <div class="container">
          <div class="row table-responsive align-middle">
                
                <!-- CUSTOMERS -->
                <h1>Customers</h1>
                <hr>
                <p>Use this page to add, edit, update or remove the details of online or in-store customers:</p>

                <!-- ADD BUTTON -->
                <table>
                    <tr>
                      <td colspan="6" align="left">
                      <a href="#addCustomerModal" class="edit" data-bs-toggle="modal">
                      <button type="button" class="btn btn-primary" data-bs-toggle="tooltip" data-bs-target="addCustomerModal" title="Add">Add A New Customer + </button></a>
                      </td>
                    </tr>
                  </tbody>
                </table>

                <!-- DATA TABLE -->
                <table class="table table-hover" id="customers-table">
                    <thead class="table-light">
                      <tr>
                        {{#each data.[0]}}
                        <th>{{@key}}</th>
                        {{/each}}
                        <th>Delete</th>
                      </tr>
                    </thead>
                    <tbody>
                      {{#each data}}
                      <tr>
                        <td>{{this.customer_id}}</td>
                        <td>{{this.customer_last}}</td>
                        <td>{{this.customer_first}}</td>
                        <td>{{this.email}}</td>
                        <td>{{this.street}}</td>
                        <td>{{this.city}}</td>
                        <td>{{this.state}}</td>
                        <td>{{this.zip}}</td>

                        <!-- DELETE -->
						<td><a href="/Customers"><button class="btn btn-outline-danger my-2 my-sm-0" onclick="deleteCustomer({{this.customer_id}})">Delete</button></a></td>
                      </tr>
                      {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

  <!-- ADD MODAL -->
	<div id="addCustomerModal" class="modal">
		<div class="modal-dialog">
			<div class="modal-content">
				<form id="add-customer-form-ajax">
					<div class="modal-header">						
						<h4 class="modal-title">Add Customer</h4>
						<button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal" aria-hidden="true">&times;</button>
					</div>
					<div class="modal-body">
					<p>Customer email and mailing address not necessary for in-store orders.</p>
            		<p style="color:red;">Required Fields *</p>						
						<div class="form-group">
							<label for="input-customer_first">Customer First Name: *</label>
							<input type="text" class="form-control" name="input-customer_first" id="input-customer_first" required>
						</div>
						<div class="form-group" for ="input-customer_last">
							<label for="input-customer_last">Customer Last Name: *</label>
							<input class="form-control" name="input-customer_last" id="input-customer_last"required></input>
						</div>
						<div class="form-group">
							<label for="input-email">Customer Email: (Optional)</label>
							<input type="email" class="form-control" name="input-email" id="input-email">
						</div>					
            <div class="form-group">
							<label for="input-street">Street Address: (Optional)</label>
							<input type="text" class="form-control" name="input-street" id="input-street">
						</div>
            <div class="form-group">
							<label for="input-city">City: (Optional)</label>
							<input type="text" class="form-control" name="input-city" id="input-city">
						</div>
            <div class="form-group">
							<label for="input-state">State: (Optional)</label>
							<input type="text" class="form-control" name="input-state" id="input-state">
						</div>
            <div class="form-group">
							<label for="input-zip">ZipCode: (Optional)</label>
							<input type="number" class="form-control" name="input-zip" id="input-zip">
						</div>
          </div>					
					<div class="modal-footer">
						<input type="button" class="btn btn-default" data-bs-dismiss="modal" value="Cancel">
						<input type="submit" class="btn btn-success" data-bs-dismiss="modal" href="Customers" value="Add">
					</div>
				</form>
			</div>
		</div>
	</div>

	<!-- ADD JS SCRIPT -->
	<script src="./js/customer/add_customer.js"></script>

	<!-- EDIT MODAL -->
	<div id="editCustomerModal" class="modal">
		<div class="modal-dialog">
			<div class="modal-content">
				<form >
					<div class="modal-header">						
						<h4 class="modal-title">Edit Customer</h4>
						<button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal" aria-hidden="true">&times;</button>
					</div>
					<div class="modal-body">					
						<div class="modal-body">
            <p style="color:red;">Required Fields *</p>						
						<div class="form-group">
							<label>Customer Last Name: *</label>
							<input type="text" class="form-control" required>
						</div>
						<div class="form-group">
							<label>Customer First Name: *</label>
							<input type="text" class="form-control" required>
						</div>
						<div class="form-group">
							<label>Customer Email: (Optional)</label>
							<input type="email" class="form-control">
						</div>					
            <div class="form-group">
							<label>Street Address: (Optional)</label>
							<input type="text" class="form-control">
						</div>
            <div class="form-group">
							<label>City: (Optional)</label>
							<input type="text" class="form-control">
						</div>
            <div class="form-group">
							<label>State: (Optional)</label>
							<input type="text" class="form-control">
						</div>
            <div class="form-group">
							<label>ZipCode: (Optional)</label>
							<input type="text" class="form-control">
						</div>
          </div>					
					  <div class="modal-footer">
						<input type="button" class="btn btn-outline-warning" data-bs-dismiss="modal" value="Cancel">
						<input type="submit" class="btn btn-outline-success" value="Save">
					  </div>
					</div>
				</form>
			</div>
		</div>
	</div>

	<!-- DELETE MODAL -->
	<div id="deleteCustomerModal" class="modal">
		<div class="modal-dialog">
			<div class="modal-content">
				<form>
					<div class="modal-header">						
						<h4 class="modal-title">Delete Customer</h4>
						<button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal" aria-hidden="true">&times;</button>
					</div>
					<div class="modal-body">					
						<p>Are you sure you want to delete this Customer?</p>
						<p>This action cannot be undone.</p>
					</div>
					<div class="modal-footer">
						<input type="button" class="btn btn btn-outline-warning" data-bs-dismiss="modal" value="Cancel">
						<input type="submit" class="btn btn-outline-danger" value="Delete">
					</div>
				</form>
			</div>
		</div>
	</div>